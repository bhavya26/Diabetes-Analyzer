<ContentDialog
    x:Class="DiabetesManager.ProMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DiabetesManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Buy Pro Mode"
    PrimaryButtonText="Buy"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <StackPanel>
            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Pro Mode Contains the Following Features:" TextWrapping="Wrap" x:Uid="ProPop11"></TextBlock>
                <TextBlock Text="• Export Data to Csv/Excel File Format" Margin="0,10,0,0" x:Uid="ProPop21"></TextBlock>
                <TextBlock Text="• Edit Data" Margin="0,10,0,0" x:Uid="ProPop31"></TextBlock>
                <TextBlock Text="• Remove Advertisment" Margin="0,10,0,0" x:Uid="ProPop41"></TextBlock>
                <TextBlock Text="• Print History Page Directly From The App" Margin="0,10,0,0" x:Uid="ProPop61"></TextBlock>
                <TextBlock Text="• Many More Feature that are incoming in the future" Margin="0,10,0,0" 
                           TextWrapping="Wrap" x:Uid="ProPop51"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</ContentDialog>
